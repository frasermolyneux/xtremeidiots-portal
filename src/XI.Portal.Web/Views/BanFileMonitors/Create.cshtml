@model XI.Portal.Data.Legacy.Models.BanFileMonitors

@{
    ViewData["Title"] = "Create Ban File Monitor";
}

<row class="row">
    <div class="container-fluid">
        <div class="card card-header">
            @ViewData["Title"]
        </div>
        <div class="card card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FilePath" class="control-label"></label>
                    <input asp-for="FilePath" class="form-control"/>
                    <span asp-validation-for="FilePath" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GameServerServerId" class="control-label"></label>
                    <select asp-for="GameServerServerId" class="form-control" asp-items="ViewBag.GameServerServerId" asp-label=""></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary"/>
                </div>
            </form>
        </div>
        <div class="card card-footer">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</row>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
@using XI.Portal.Web.Extensions
@model XI.Portal.Data.Legacy.Models.BanFileMonitors

@{
    ViewData["Title"] = "Ban File Monitor Details";
}

<div class="wrapper wrapper-content animated fadeInRight">

    <row class="row">
        <div class="col-12">

            <div class="container-fluid">
                <div class="ibox">
                    <div class="ibox-title">
                        @ViewData["Title"]
                    </div>
                    <div class="ibox-content">
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.GameServerServer)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.ServerName(Model.GameServerServer.Title, Model.GameServerServer.LiveTitle)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.FilePath)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.MonitorFtpPath(Model.GameServerServer.FtpHostname, Model.FilePath)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.RemoteFileSize)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.RemoteFileSize)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.LastSync)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.LastSync)
                            </dd>
                        </dl>
                    </div>
                    <div class="ibox-footer">
                        <span>
                            <a asp-action="Edit" asp-route-id="@Model.BanFileMonitorId">Edit</a> |
                            <a asp-action="Index">Back to List</a>
                        </span>
                    </div>
                </div>
            </div>

        </div>
    </row>

</div>
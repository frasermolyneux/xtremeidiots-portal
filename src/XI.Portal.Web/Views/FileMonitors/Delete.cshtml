@using XI.Portal.Web.Extensions
@model XI.Portal.Servers.Dto.FileMonitorDto

@{
    ViewData["Title"] = "Delete File Monitor";
}

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="alert alert-primary" role="alert">
        <i class="fa fa-info-circle"></i> If you are changing a mod on the server then you can update the existing monitor rather than deleting.
    </div>

    <row class="row">
        <div class="col-12">

            <div class="container-fluid">
                <div class="ibox">
                    <div class="ibox-title">
                        @ViewData["Title"]
                    </div>
                    <div class="ibox-content">
                        <h3>Are you sure you want to delete this?</h3>
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.GameServer)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.ServerName(Model.GameServer.Title, null)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.FilePath)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.MonitorFtpPath(Model.GameServer.FtpHostname, Model.FilePath)
                            </dd>
                        </dl>
                    </div>
                    <div class="ibox-footer">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="FileMonitorId"/>
                            <input type="submit" value="Delete" class="btn btn-danger"/> |
                            <a asp-action="Index">Back to List</a>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </row>

</div>

@* ReSharper disable once Razor.SectionNotResolved *@

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
@using XI.Portal.Web.Extensions
@model XI.Portal.Data.Legacy.Models.FileMonitors

@{
    ViewData["Title"] = "File Monitor Details";
}

<row class="row">
    <div class="container-fluid">
        <div class="card card-header">
            @ViewData["Title"]
        </div>
        <div class="card card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.GameServerServer)
                </dt>
                <dd class="col-sm-10">
                    @Html.ServerName(Model.GameServerServer.Title, Model.GameServerServer.LiveTitle)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FilePath)
                </dt>
                <dd class="col-sm-10">
                    @Html.MonitorFtpPath(Model.GameServerServer.FtpHostname, Model.FilePath)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BytesRead)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BytesRead)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.LastRead)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LastRead)
                </dd>
            </dl>
        </div>
        <div class="card card-footer">
            <span>
                <a asp-action="Edit" asp-route-id="@Model.FileMonitorId">Edit</a> |
                <a asp-action="Index">Back to List</a>
            </span>
        </div>
    </div>
</row>
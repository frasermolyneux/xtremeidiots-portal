@using XI.Portal.Web.Extensions
@model XI.Portal.Data.Legacy.Models.GameServers

@{
    ViewData["Title"] = "Delete Game Server";
}

<div class="wrapper wrapper-content animated fadeInRight">

    <row class="row">
        <div class="col-12">

            <div class="container-fluid">
                <div class="ibox">
                    <div class="ibox-title">
                        @ViewData["Title"]
                    </div>
                    <div class="ibox-content">
                        <h3>Are you sure you want to delete this?</h3>
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Title)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.ServerName(Model.Title, Model.LiveTitle)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.GameType)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.GameType)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Hostname)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.ServerHostAndPort(Model.Hostname, Model.QueryPort)
                            </dd>
                        </dl>
                    </div>
                    <div class="ibox-footer">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="ServerId"/>
                            <input type="submit" value="Delete" class="btn btn-danger"/> |
                            <a asp-action="Index">Back to List</a>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </row>

</div>
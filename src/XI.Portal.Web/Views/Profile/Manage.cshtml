@using XI.Portal.Web.Extensions
@{
    ViewData["Title"] = "Manage Profile";
}

<row class="row">
    <div class="container text-center">
        <img src="@(User.PhotoUrl())" alt="Avatar" style="border-radius: 50%; max-height: 180px"> <h1 class="display-4">@User.Username()</h1>
    </div>
</row>

<row class="row">
    <div class="container-fluid" style="padding-top: 40px">
        <div class="card card-header">
            Profile Info
        </div>
        <div class="card card-body">
            <table class="table table-responsive">
                <tbody>
                    <tr>
                        <td>Email</td>
                        <td>@User.Email()</td>
                    </tr>
                    <tr>
                        <td>XtremeIdiots Profile</td>
                        <td>
                            <a href="https://www.xtremeidiots.com/profile/@(User.XtremeIdiotsId())-@(User.Username())/" target="_blank">XtremeIdiots Profile</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</row>

<row class="row">
    <div class="container-fluid" style="padding-top: 40px">
        <p>
            <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#claimsDebug" aria-expanded="false" aria-controls="claimsDebug">
                Claims Debug Info
            </button>
        </p>
        <div class="collapse" id="claimsDebug">
            <div class="card card-header">
                Claims Debug Info
            </div>
            <div class="card card-body">
                <table class="table table-responsive">
                    <thead>
                        <tr>
                            <td>Type</td>
                            <td>Value</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in User.Claims)
                        {
                            <tr>
                                <td>@claim.Type</td>
                                <td>@claim.Value</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</row>
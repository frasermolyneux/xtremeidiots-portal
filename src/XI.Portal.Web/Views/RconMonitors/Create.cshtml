@model XI.Portal.Data.Legacy.Models.RconMonitors

@{
    ViewData["Title"] = "Create Rcon Monitor";
}

<row class="row">
    <div class="container-fluid">
        <div class="card card-header">
            @ViewData["Title"]
        </div>
        <div class="card card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="GameServerServerId" class="control-label"></label>
                    <select asp-for="GameServerServerId" class="form-control" asp-items="ViewBag.GameServerServerId"></select>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="MonitorMapRotation"/> @Html.DisplayNameFor(model => model.MonitorMapRotation)
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="MonitorPlayers"/> @Html.DisplayNameFor(model => model.MonitorPlayers)
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="MonitorPlayerIps"/> @Html.DisplayNameFor(model => model.MonitorPlayerIps)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary"/>
                </div>
            </form>
        </div>
        <div class="card card-footer">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</row>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
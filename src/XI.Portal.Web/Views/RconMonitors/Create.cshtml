@model XI.Portal.Servers.Dto.RconMonitorDto

@{
    ViewData["Title"] = "Create Rcon Monitor";
}

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="alert alert-primary" role="alert">
        <i class="fa fa-info-circle"></i> There may be a delay of 15 - 30 minutes before the next execution of the monitor process after creating.
    </div>

    <row class="row">
        <div class="col-12">

            <div class="container-fluid">
                <div class="ibox">
                    <div class="ibox-title">
                        @ViewData["Title"]
                    </div>
                    <div class="ibox-content">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="ServerId" class="control-label"></label>
                                <select asp-for="ServerId" class="form-control" asp-items="ViewBag.GameServers"></select>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="MonitorMapRotation" /> @Html.DisplayNameFor(model => model.MonitorMapRotation)
                                </label>
                            </div>
                            <div class="alert alert-primary" role="alert">
                                <i class="fa fa-info-circle"></i> This is experimental, the portal will try and retrieve the map rotation using rcon. It does not work on player variable rotations.
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="MonitorPlayers" /> @Html.DisplayNameFor(model => model.MonitorPlayers)
                                </label>
                            </div>
                            <div class="alert alert-primary" role="alert">
                                <i class="fa fa-info-circle"></i> This is needed if there is not a file monitor to gather player information.
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="MonitorPlayerIps" /> @Html.DisplayNameFor(model => model.MonitorPlayerIps)
                                </label>
                            </div>
                            <div class="alert alert-primary" role="alert">
                                <i class="fa fa-info-circle"></i> This will gather and record player IP address data from rcon.
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-plus"> Create</i></button>
                            </div>
                        </form>
                    </div>
                    <div class="ibox-footer">
                        <div class="btn-group btn-group-sm" role="group">
                            <a type="button" class="btn btn-primary" asp-action="Index"><i class="fa fa-arrow-left"></i> Back to List</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </row>

</div>

@* ReSharper disable once Razor.SectionNotResolved *@

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
@model XI.Portal.Data.Legacy.Models.RconMonitors

@{
    ViewData["Title"] = "Edit Rcon Monitor";
}

<row class="row">
    <div class="container-fluid">
        <div class="card card-header">
            @ViewData["Title"]
        </div>
        <div class="card card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="RconMonitorId"/>
                <div class="form-group">
                    <label asp-for="LastUpdated" class="control-label"></label>
                    <input asp-for="LastUpdated" class="form-control"/>
                    <span asp-validation-for="LastUpdated" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="MonitorMapRotation"/> @Html.DisplayNameFor(model => model.MonitorMapRotation)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="MapRotationLastUpdated" class="control-label"></label>
                    <input asp-for="MapRotationLastUpdated" class="form-control"/>
                    <span asp-validation-for="MapRotationLastUpdated" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="MonitorPlayers"/> @Html.DisplayNameFor(model => model.MonitorPlayers)
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="MonitorPlayerIps"/> @Html.DisplayNameFor(model => model.MonitorPlayerIps)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="LastError" class="control-label"></label>
                    <input asp-for="LastError" class="form-control"/>
                    <span asp-validation-for="LastError" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GameServerServerId" class="control-label"></label>
                    <select asp-for="GameServerServerId" class="form-control" asp-items="ViewBag.GameServerServerId"></select>
                    <span asp-validation-for="GameServerServerId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary"/>
                </div>
            </form>
        </div>
        <div class="card card-footer">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</row>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
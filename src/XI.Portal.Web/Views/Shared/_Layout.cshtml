@using XI.Portal.Web.Constants
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - XI Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">XI Portal</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <partial name="_LoginPartial"/>

                <ul class="navbar-nav flex-grow-1">

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Maps" asp-action="Index">Maps</a>
                    </li>

                    <li policy="@XtremeIdiotsPolicy.Management" class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarServersDropDown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Management
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarServersDropDown">
                            <a class="dropdown-item" asp-controller="GameServers" asp-action="Index">Game Servers</a>
                            <a class="dropdown-item" asp-controller="RconMonitors" asp-action="Index">Rcon Monitors</a>
                            <a class="dropdown-item" asp-controller="FileMonitors" asp-action="Index">File Monitors</a>
                            <a class="dropdown-item" asp-controller="BanFileMonitors" asp-action="Index">Ban File Monitors</a>
                        </div>
                    </li>

                    <li policy="@XtremeIdiotsPolicy.SeniorAdmin" class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarUsersDropDown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Users
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarUsersDropDown">
                            <a class="dropdown-item" asp-controller="User" asp-action="Index">Manage Users</a>
                            <a class="dropdown-item" asp-controller="User" asp-action="LegacyIndex">Legacy Users</a>
                        </div>
                    </li>

                    <li policy="@XtremeIdiotsPolicy.SeniorAdmin" class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarMigrationDropDown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Migration
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarMigrationDropDown">
                            <a class="dropdown-item" asp-controller="Migration" asp-action="MigrateUsers">Migrate Legacy Users</a>
                            <a class="dropdown-item" asp-controller="Migration" asp-action="MigrateDemoAuthKeys">Migrate Demo Auth Keys</a>
                            <a class="dropdown-item" asp-controller="Migration" asp-action="MigrateDemos">Migrate Demos</a>
                            <a class="dropdown-item" asp-controller="Migration" asp-action="MigrateMaps">Migrate Maps</a>
                        </div>
                    </li>

                </ul>

            </div>
        </div>
    </nav>
</header>
<div class="container-wider">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<div style="bottom: 0; position: fixed; width: 100%;">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" style="margin-bottom: 25px; margin-left: 40px; margin-right: 40px;">
            @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2020 - Fraser Molyneux
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@RenderSection("Scripts", false)
</body>
</html>
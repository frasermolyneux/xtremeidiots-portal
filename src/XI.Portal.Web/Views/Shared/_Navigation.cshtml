<li policy="@AuthPolicies.AccessChangeLog" class="@Html.IsSelected("ChangeLog", "Index")">
    <a asp-controller="ChangeLog" asp-action="Index">
        <i class="fa fa-clipboard"></i> <span class="nav-label">Change Log</span>
    </a>

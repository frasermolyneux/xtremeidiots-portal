@{
    ViewData["Title"] = "Users";
}

<div class="wrapper wrapper-content animated fadeInRight">

    <row class="row">
        <div class="col-12">

            <div class="container-fluid">
                <div class="ibox">
                    <div class="ibox-title">
                        @ViewData["Title"]
                    </div>
                    <div class="ibox-content">
                        <table id="dataTable">
                            <thead>
                            <tr>
                                <td>Id</td>
                                <td>Username</td>
                                <td>Email</td>
                                <td>Portal Claims</td>
                                <td></td>
                                <td></td>
                            </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </row>

</div>

@* ReSharper disable once Razor.SectionNotResolved *@

@section Scripts {

    <script type="text/javascript">

        $(document).ready(function() {
            $('#dataTable').DataTable({
                processing: true,
                order: [[1, "asc"]],
                ajax: {
                    url: '/User/GetUsersAjax',
                    dataSrc: 'data'
                },
                columns: [
                    {
                        data: 'id',
                        name: 'id',
                        sortable: true
                    },
                    {
                        data: 'username',
                        name: 'username',
                        sortable: true
                    },
                    {
                        data: 'email',
                        name: 'email',
                        sortable: true
                    },
                    {
                        data: 'portalClaims',
                        name: 'portalClaims',
                        sortable: false,
                        render: function(data, type, row) {
                            var claims = "";

                            for (let i = 0; i < row['portalClaims'].length; i++) {
                                claims = claims + "[" + row['portalClaims'][i].claimType + "],";
                            }

                            return claims.substring(0, claims.length - 1);
                        }
                    },
                    {
                        sortable: false,
                        render: function(data, type, row) {
                            return '<form class="form-inline" method="post" action="/User/LogUserOut" method="post">' +
                                '<input id="id" name="id" type="hidden" value="' +
                                row['id'] +
                                '\"/>' +
                                '<button class="btn btn-link" type="submit">Logout User</button>' +
                                '@Html.AntiForgeryToken()' +
                                '</form>';
                        }
                    },
                    {
                        sortable: false,
                        render: function(data, type, row) {
                            return manageClaimsLink(row['id']);
                        }
                    }
                ]
            });
        });

    </script>
}
@using XtremeIdiots.Portal.Web.Extensions
@using XtremeIdiots.Portal.Repository.Abstractions.Models.V1.BanFileMonitors
@model BanFileMonitorDto

@{
    ViewData["Title"] = "Delete Ban File Monitor";
}

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="alert alert-primary" role="alert">
        <i class="fa fa-info-circle" aria-hidden="true"></i> If you are changing a mod on the server then you can update
        the existing
        monitor rather than deleting.
    </div>

    <div class="row">
        <div class="col-12">

            <div class="container-fluid">
                <div class="ibox">
                    <div class="ibox-title">
                        @ViewData["Title"]
                    </div>
                    <div class="ibox-content">
                        <h3>Are you sure you want to delete this?</h3>
                        <dl class="row">
                            <dt class="col-sm-2">
                                Game Server
                            </dt>
                            <dd class="col-sm-10" data-testid="ban-file-monitor-delete-gameserver">
                                <server-name title="@Model.GameServer.Title"
                                    live-title="@Model.GameServer.LiveTitle"></server-name>
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.FilePath)
                            </dt>
                            <dd class="col-sm-10" data-testid="ban-file-monitor-delete-filepath">
                                @Html.MonitorFtpPath(Model.GameServer.FtpHostname, Model.GameServer.FtpPort ?? 0,
                                Model.FilePath)
                            </dd>
                        </dl>
                    </div>
                    <div class="ibox-footer">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="BanFileMonitorId" />

                            <div class="btn-group btn-group-sm" role="group">
                                <button class="btn btn-danger" type="submit"
                                    data-testid="ban-file-monitor-delete-confirm">
                                    <i class="fa fa-trash" aria-hidden="true"></i> Delete
                                </button>

                                <a class="btn btn-primary" asp-action="Index"
                                    data-testid="ban-file-monitor-delete-back">
                                    <i class="fa fa-arrow-left" aria-hidden="true"></i> Back to List
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>

@* ReSharper disable once Razor.SectionNotResolved *@

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

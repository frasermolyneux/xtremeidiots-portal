@using XtremeIdiots.Portal.Web.Extensions
@using XtremeIdiots.Portal.Repository.Abstractions.Models.V1.BanFileMonitors
@model BanFileMonitorDto

@{
    ViewData["Title"] = "Ban File Monitor Details";
}

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">
        <div class="col-12">

            <div class="container-fluid">
                <div class="ibox">
                    <div class="ibox-title">
                        @ViewData["Title"]
                    </div>
                    <div class="ibox-content">
                        <dl class="row">
                            <dt class="col-sm-2">
                                Game Server
                            </dt>
                            <dd class="col-sm-10" data-testid="ban-file-monitor-details-gameserver">
                                <server-name title="@Model.GameServer.Title"
                                    live-title="@Model.GameServer.LiveTitle"></server-name>
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.FilePath)
                            </dt>
                            <dd class="col-sm-10" data-testid="ban-file-monitor-details-filepath">
                                <ftp-path host="@Model.GameServer.FtpHostname" port="@(Model.GameServer.FtpPort ?? 0)"
                                    path="@Model.FilePath" user="@Model.GameServer.FtpUsername"
                                    password="@Model.GameServer.FtpPassword"></ftp-path>
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.RemoteFileSize)
                            </dt>
                            <dd class="col-sm-10" data-testid="ban-file-monitor-details-filesize">
                                @Html.DisplayFor(model => model.RemoteFileSize)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.LastSync)
                            </dt>
                            <dd class="col-sm-10" data-testid="ban-file-monitor-details-lastsync">
                                @Html.DisplayFor(model => model.LastSync)
                            </dd>
                        </dl>
                    </div>
                    <div class="ibox-footer">
                        <div class="btn-group btn-group-sm" role="group">
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.BanFileMonitorId"
                                data-testid="ban-file-monitor-details-edit">
                                <i class="fa fa-edit" aria-hidden="true"></i> Edit
                            </a>
                            <a class="btn btn-primary" asp-action="Index" data-testid="ban-file-monitor-details-back">
                                <i class="fa fa-arrow-left" aria-hidden="true"></i> Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>
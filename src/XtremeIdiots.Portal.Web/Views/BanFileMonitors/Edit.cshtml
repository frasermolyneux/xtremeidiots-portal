@using XtremeIdiots.Portal.Web.ViewModels
@model EditBanFileMonitorViewModel

@{
    ViewData["Title"] = "Edit Ban File Monitor";
}

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="alert alert-primary" role="alert">
        <i class="fa fa-info-circle" aria-hidden="true"></i> There may be a delay of 15 - 30 minutes before the next
        execution of the
        monitor process after editing.
    </div>

    <div class="row">
        <div class="col-12">

            <div class="container-fluid">
                <div class="ibox">
                    <div class="ibox-title">
                        @ViewData["Title"]
                    </div>
                    <div class="ibox-content">
                        <form asp-action="Edit">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <input type="hidden" asp-for="BanFileMonitorId" />
                            <div class="form-group">
                                <label asp-for="GameServerId" class="control-label"></label>
                                <select asp-for="GameServerId" class="form-control" asp-items="ViewBag.GameServers"
                                    disabled="disabled" data-testid="ban-file-monitor-form-gameserver"></select>
                                <span asp-validation-for="GameServerId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FilePath" class="control-label"></label>
                                <input asp-for="FilePath" class="form-control"
                                    data-testid="ban-file-monitor-form-filepath" />
                                <span asp-validation-for="FilePath" class="text-danger"></span>
                            </div>
                            <div class="alert alert-primary" role="alert">
                                <i class="fa fa-info-circle" aria-hidden="true"></i> You do not need to enter the ftp
                                hostname or
                                credentials. example: /mods/xinam/ban.txt
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary"
                                    data-testid="ban-file-monitor-edit-submit" />
                            </div>
                        </form>
                    </div>
                    <div class="ibox-footer">
                        <div class="btn-group btn-group-sm" role="group">
                            <a class="btn btn-primary" asp-action="Index" data-testid="ban-file-monitor-edit-back">
                                <i class="fa fa-arrow-left" aria-hidden="true"></i> Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>

@* ReSharper disable once Razor.SectionNotResolved *@

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
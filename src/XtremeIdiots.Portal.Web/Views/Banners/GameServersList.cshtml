@using Microsoft.CodeAnalysis
@model List<string>

@{
    Layout = null;
}

<!DOCTYPE html>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<div id="server-list" data-testid="banner-server-list">
    <div data-testid="banner-loading-indicator">Loading Servers..</div>
</div>

@*@await Component.InvokeAsync("GameServerList")*@

<script type="text/javascript">
    $(document).ready(function () {

        $.getJSON("/Banners/GetGameServers",
            function (data) {
                var items = [];
                $.each(data,
                    function (key, val) {
                        items.push(val);
                    });

                $("#server-list").html(items.join(""));
            });

    })
</script>

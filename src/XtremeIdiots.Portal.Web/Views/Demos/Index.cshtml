@using XtremeIdiots.Portal.Repository.Abstractions.Constants.V1
@using XtremeIdiots.Portal.Repository.Abstractions.Extensions.V1
@{
    ViewData["Title"] = "Demos Index";
    var dataUrl = "/Demos/GetDemoListAjax";
    if (ViewData["GameType"] is GameType gameType)
    {
        ViewData["Title"] = gameType.DisplayName() + " Demos Index";
        dataUrl = "/Demos/GetDemoListAjax/" + ViewData["GameType"];
    }
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-12">
            <div class="admin-actions-filters mb-2" id="demosFilters">
                <div class="filter-group">
                    <label for="filterGameType" class="form-label">Game Type</label>
                    <select id="filterGameType" class="form-select">
                        <option value="">All Games</option>
                        @foreach (var gt in Enum.GetValues<GameType>())
                        {
                            var isSelected = ViewData["GameType"] != null && ViewData["GameType"]!.ToString() ==
                            gt.ToString();
                            <option value="@gt" selected="@(isSelected ? "selected" : null)">@gt</option>
                        }
                    </select>
                </div>
                <div class="filter-group">
                    <label class="form-label" for="resetFilters">Reset</label>
                    <button type="button" id="resetFilters" class="btn btn-outline-secondary btn-sm">Clear
                        Filters</button>
                </div>
            </div>
            <div class="ibox demos-table-wrapper">
                <div class="ibox-title">
                    <h5>@ViewData["Title"]</h5>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table id="dataTable" class="table table-striped table-hover w-100" data-source="@dataUrl">
                            <thead>
                                <tr>
                                    <th scope="col">Game</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Map</th>
                                    <th scope="col">Mod</th>
                                    <th scope="col">GameType</th>
                                    <th scope="col">Server</th>
                                    <th scope="col">Size</th>
                                    <th scope="col">Uploaded By</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
            <div class="alert alert-primary mt-2" role="alert">
                <i class="fa fa-info-circle"></i> Demos are only visible to the uploader and the admin team for that
                game. Demos can be managed (e.g. deleted) by the uploader or a head admin of the relevant game.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <form id="__af" method="post" style="display:none">@Html.AntiForgeryToken()</form>
    <script src="~/js/demos-index.js" asp-append-version="true"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-actions.css" />
    <link rel="stylesheet" href="~/css/demos-index.css" />
}
@using XtremeIdiots.Portal.Repository.Abstractions.Constants.V1
@using XtremeIdiots.Portal.Repository.Abstractions.Extensions.V1
@{
    ViewData["Title"] = "Demos Index";
    var dataUrl = "/Demos/GetDemoListAjax";

    if (ViewData["GameType"] is GameType gameType)
    {
        ViewData["Title"] = gameType.DisplayName() + " Demos Index";
        dataUrl = "/Demos/GetDemoListAjax/" + ViewData["GameType"];
    }
}

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="alert alert-primary" role="alert">
        <i class="fa fa-info-circle"></i> Demos are only visible to the uploader and the admin team for that game. Demos
        can be managed (e.g. deleted) by the uploader or a head admin of the relevant game.
    </div>

    <row class="row">
        <div class="col-12">

            <div class="container-fluid">
                <div class="ibox">
                    <div class="ibox-title">
                        @ViewData["Title"]
                    </div>
                    <div class="ibox-content">
                        <table id="dataTable">
                            <thead>
                                <tr>
                                    <td>Game</td>
                                    <td>Name</td>
                                    <td>Date</td>
                                    <td>Map</td>
                                    <td>Mod</td>
                                    <td>GameType</td>
                                    <td>Server</td>
                                    <td>Size</td>
                                    <td>Uploaded By</td>
                                    <td></td>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </row>

</div>

@* ReSharper disable once Razor.SectionNotResolved *@

@section Scripts {

    <script type="text/javascript">

        $(document).ready(function () {
            $('#dataTable').DataTable({
                processing: true,
                serverSide: true,
                searchDelay: 1000,
                stateSave: true,
                order: [[2, "desc"]],
                ajax: {
                    url: '@dataUrl',
                    dataSrc: 'data',
                    contentType: "application/json",
                    type: "POST",
                    "data": function (d) {
                        return JSON.stringify(d);
                    }
                },
                columns: [
                    {
                        name: 'game',
                        sortable: true,
                        render: function (data, type, row) {
                            return gameTypeIcon(row['game']);
                        }
                    },
                    {
                        name: 'name',
                        sortable: true,
                        render: function (data, type, row) {
                            return downloadDemoLink(row['name'], row['demoId']);
                        }
                    },
                    {
                        data: 'date',
                        name: 'date',
                        sortable: true
                    },
                    {
                        data: 'map',
                        name: 'map',
                        sortable: false
                    },
                    {
                        data: 'mod',
                        name: 'mod',
                        sortable: false
                    },
                    {
                        data: 'gameType',
                        name: 'gameType',
                        sortable: false
                    },
                    {
                        data: 'server',
                        name: 'server',
                        sortable: false
                    },
                    {
                        data: 'size',
                        name: 'size',
                        sortable: false
                    },
                    {
                        data: 'uploadedBy',
                        name: 'uploadedBy',
                        sortable: true
                    },
                    {
                        sortable: false,
                        render: function (data, type, row) {
                            if (row['showDeleteLink'] === true) {
                                @if (ViewData["GameType"] != null)
                                    {
                                        <text>
                                            return deleteDemoLink(row['demoId'], "@ViewData["GameType"]");
                                        </text>
                                }
                                    else
                                    {
                                        <text>
                // ReSharper disable once JsUnreachableCode
                                            return deleteDemoLink(row['demoId']);
                                        </text>
                                }
                                    }
                            return "";
                        }
                    }
                ]
            });
        });

    </script>
}
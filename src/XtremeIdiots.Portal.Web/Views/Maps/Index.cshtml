@{
    ViewData["Title"] = "Maps Index";
    var dataUrl = "/Maps/GetMapListAjax";

    if (ViewData["GameType"] != null)
    {
        ViewData["Title"] = ViewData["GameType"] + " Maps Index";
        dataUrl = "/Maps/GetMapListAjax/" + ViewData["GameType"];
    }
}

<div class="wrapper wrapper-content animated fadeInRight">

    <row class="row">
        <div class="col-12">

            <div class="container-fluid">
                <div class="ibox">
                    <div class="ibox-content">
                        <table id="dataTable">
                            <thead>
                                <tr>
                                    <td>Game</td>
                                    <td>Name</td>
                                    <td>Map Files</td>
                                    <td>Popularity</td>
                                    <td></td>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </row>

</div>

@* ReSharper disable once Razor.SectionNotResolved *@

@section Scripts {

    <form id="__af" method="post" style="display:none">@Html.AntiForgeryToken()</form>

    <script type="text/javascript">

        $(document).ready(function () {
            $('#dataTable').DataTable({
                processing: true,
                serverSide: true,
                searchDelay: 1000,
                stateSave: true,
                order: [[1, "asc"]],
                ajax: {
                    url: '@dataUrl',
                    dataSrc: 'data',
                    contentType: "application/json",
                    type: "POST",
                    beforeSend: function (xhr) {
                        var tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                        var antiForgeryToken = tokenInput ? tokenInput.value : '';
                        if (antiForgeryToken) {
                            xhr.setRequestHeader('RequestVerificationToken', antiForgeryToken);
                        }
                    },
                    "data": function (d) {
                        return JSON.stringify(d);
                    }
                },
                columns: [
                    {
                        data: 'gameType',
                        name: 'gameType',
                        sortable: true,
                        render: function (data, type, row) {
                            return gameTypeIcon(row['gameType']);
                        }
                    },
                    {
                        data: 'mapName',
                        name: 'mapName',
                        sortable: true
                    },
                    {
                        data: 'mapFiles',
                        name: 'mapFiles',
                        sortable: false,
                        render: function (data) {
                            if (data === undefined || data == null || data.length === 0) {
                                return "No Map Files";
                            }
                            var outputText = "<ul class=\"list-unstyled mb-0\">";
                            for (var key in data) {
                                if (Object.prototype.hasOwnProperty.call(data, key)) {
                                    var file = data[key];
                                    if (file && file['url'] && file['fileName']) {
                                        outputText += "<li><a href='" + file['url'] + "'>" + file['fileName'] + "</a></li>";
                                    }
                                }
                            }
                            outputText += "</ul>";
                            return outputText;
                        }
                    },
                    {
                        name: 'popularity',
                        sortable: true,
                        render: function (data, type, row) {
                            return "<div class=\"progress\" id=\"progress-" +
                                row['mapName'] +
                                "\"> <div class=\"progress-bar bg-info\" role=\"progressbar\" style=\"width: " +
                                row['likePercentage'] +
                                "%\" aria-valuenow=\"" +
                                row['totalLikes'] +
                                "\" aria-valuemin=\"0\" aria-valuemax=\"" +
                                row['totalVotes'] +
                                "\"></div>" +
                                "<div class=\"progress-bar bg-danger\" role=\"progressbar\" style=\"width: " +
                                row['dislikePercentage'] +
                                "%\" aria-valuenow=\"" +
                                row['totalDislikes'] +
                                "\" aria-valuemin=\"0\" aria-valuemax=\"" +
                                row['totalVotes'] +
                                "\"></div>" +
                                "</div>" +
                                "<div class=\"m-t-sm\">" +
                                row['totalLikes'] +
                                " likes and " +
                                row['totalDislikes'] +
                                " dislikes out of " +
                                row['totalVotes'] +
                                "</div>";
                        }
                    },
                    {
                        sortable: false,
                        render: function (data, type, row) {
                            if (!row['mapImageUri']) {
                                return "<img alt=\"No map image available\" style=\"border: 5px solid #021a40; display: block; margin: auto; max-width:200px;\" src=\"/images/noimage.jpg\" />";
                            }
                            return "<img alt=\"Map image for " + row['mapName'] + "\" style=\"border: 5px solid #021a40; display: block; margin: auto; max-width:200px;\" src=\"" + row['mapImageUri'] + "\" />";
                        }
                    }
                ]
            });
        });

    </script>
}
@using XtremeIdiots.Portal.Repository.Abstractions.Constants.V1
@using XtremeIdiots.Portal.Repository.Abstractions.Extensions.V1
@{
    ViewData["Title"] = "Players Index";
    var dataUrl = "/Players/GetPlayersAjax";
    if (ViewData["GameType"] is GameType gameType)
    {
        ViewData["Title"] = gameType.DisplayName() + " Players Index";
        dataUrl = "/Players/GetPlayersAjax/" + ViewData["GameType"];
    }
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-12">
            <div class="admin-actions-filters mb-2" id="playersFilters">
                <div class="filter-group">
                    <label for="filterGameType" class="form-label">Game Type</label>
                    <select id="filterGameType" class="form-select">
                        <option value="">All Games</option>
                        @foreach (var gt in Enum.GetValues<GameType>())
                        {
                            var isSelected = ViewData["GameType"] != null && ViewData["GameType"]!.ToString() ==
                            gt.ToString();
                            <option value="@gt" selected="@(isSelected ? "selected" : null)">@gt</option>
                        }
                    </select>
                </div>
                <div class="filter-group">
                    <label for="filterPlayersFilter" class="form-label">Filter Type</label>
                    <select id="filterPlayersFilter" class="form-select">
                        <option value="UsernameAndGuid" selected>Username &amp; Guid</option>
                        <option value="IpAddress">IP Address</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label class="form-label" for="resetFilters">Reset</label>
                    <button type="button" id="resetFilters" class="btn btn-outline-secondary btn-sm">Clear
                        Filters</button>
                </div>
            </div>
            <div class="ibox players-table-wrapper">
                <div class="ibox-title">
                    <h5>@ViewData["Title"]</h5>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table id="dataTable" class="table table-striped table-hover w-100" data-source="@dataUrl">
                            <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Player IP</th>
                                    <th scope="col">Guid</th>
                                    <th scope="col">First Seen</th>
                                    <th scope="col">Last Seen</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <form id="__af" method="post" style="display:none">@Html.AntiForgeryToken()</form>
    <script src="~/js/players-index.js" asp-append-version="true"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-actions.css" />
    <link rel="stylesheet" href="~/css/players-index.css" />
}

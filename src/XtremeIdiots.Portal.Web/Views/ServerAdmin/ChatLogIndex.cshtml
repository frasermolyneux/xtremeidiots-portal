@using XtremeIdiots.Portal.Repository.Abstractions.Constants.V1
@using XtremeIdiots.Portal.Repository.Abstractions.Extensions.V1
@{
    ViewData["Title"] = "Global ChatLog";
    var dataUrl = "/ServerAdmin/GetChatLogAjax";
    var showServer = true; // show server column only when not filtered to a specific server

    if (ViewData["GameType"] is GameType gameType)
    {
        ViewData["Title"] = gameType.DisplayName() + " ChatLog Index";
        dataUrl = "/ServerAdmin/GetGameChatLogAjax/" + ViewData["GameType"];
    }

    if (ViewData["GameServerId"] != null)
    {
        ViewData["Title"] = "Server ChatLog Index";
        dataUrl = "/ServerAdmin/GetServerChatLogAjax/" + ViewData["GameServerId"];
        showServer = false;
    }
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-12">
            <div class="admin-actions-filters mb-2" id="chatLogFilters">
                @* Game Type filter only visible on global (no specific GameType or Server) *@
                @if (ViewData["GameServerId"] == null)
                {
                    if (ViewData["GameType"] == null)
                    {
                        <div class="filter-group">
                            <label for="filterGameType" class="form-label">Game Type</label>
                            <select id="filterGameType" class="form-select">
                                <option value="">All Games</option>
                                @foreach (var gt in Enum.GetValues<GameType>())
                                {
                                    <option value="@gt">@gt.DisplayName()</option>
                                }
                            </select>
                        </div>
                    }
                    <div class="filter-group">
                        <label for="filterGameServer" class="form-label">Server</label>
                        <select id="filterGameServer" class="form-select">
                            <option value="">All Servers</option>
                        </select>
                    </div>
                }
                <div class="filter-group">
                    <label for="filterLocked" class="form-label">Locked</label>
                    <select id="filterLocked" class="form-select">
                        <option value="">All</option>
                        <option value="true">Locked Only</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label class="form-label" for="resetFilters">Reset</label>
                    <button type="button" id="resetFilters" class="btn btn-outline-secondary btn-sm">Clear
                        Filters</button>
                </div>
            </div>
            <div class="ibox chatlog-table-wrapper">
                <div class="ibox-title">
                    <h5>@ViewData["Title"]</h5>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table id="dataTable" class="table table-striped table-hover w-100" data-source="@dataUrl"
                            data-show-server="@showServer">
                            <thead>
                                <tr>
                                    <th scope="col">Timestamp</th>
                                    <th scope="col">Username</th>
                                    <th scope="col">Type</th>
                                    <th scope="col">Message</th>
                                    @if (showServer)
                                    {
                                        <th scope="col">Server</th>
                                    }
                                    <th scope="col">Locked</th>
                                    <th scope="col">Link</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <form id="__af" method="post" style="display:none">@Html.AntiForgeryToken()</form>
    <script src="~/js/chatlog-index.js" asp-append-version="true"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-actions.css" />
    <link rel="stylesheet" href="~/css/chatlog-index.css" />
}

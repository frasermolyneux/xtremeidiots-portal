@using XtremeIdiots.Portal.Web.Extensions
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-F10FZ2SV5E"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-F10FZ2SV5E');
    </script>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <title>@ViewData["Title"] - XI Portal</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description"
        content="@(ViewData["Description"] ?? "XtremeIdiots Portal - Game servers management and administration")">
    <meta name="theme-color" content="#1ab394">
    @* Expose user locale & timezone claims for client-side formatting *@
    @{
        var localeClaim = User?.Claims?.FirstOrDefault(c => c.Type == "locale" || c.Type == "culture" || c.Type ==
        "ui_locale");
        var tzClaim = User?.Claims?.FirstOrDefault(c => c.Type == "TimeZone" || c.Type == "timezone" || c.Type ==
        "time_zone");
        if (localeClaim != null)
        {
            <meta name="user-locale" content="@localeClaim.Value" />
        }
        if (tzClaim != null)
        {
            <meta name="user-timezone" content="@tzClaim.Value" />
        }
    }

    @if (IsSectionDefined("Styles"))
    {
        @await RenderSectionAsync("Styles", false)
    }

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
        <link rel="stylesheet" href="~/css/animate.css" />
        <link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css" />
        <link rel="stylesheet" href="~/lib/datatables-responsive/responsive.dataTables.min.css" />
        <link rel="stylesheet" href="~/lib/toastr/toastr.min.css" />
        <link rel="stylesheet" href="~/css/inspinia.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/responsive-overrides.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/admin-actions.css" asp-append-version="true" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
        <link rel="stylesheet" href="~/css/animate.css" />
        <link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css" />
        <link rel="stylesheet" href="~/lib/datatables-responsive/responsive.dataTables.min.css" />
        <link rel="stylesheet" href="~/lib/toastr/toastr.min.css" />
        <link rel="stylesheet" href="~/css/inspinia.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/responsive-overrides.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/admin-actions.css" asp-append-version="true" />
    </environment>

    @Html.Raw(JavaScriptSnippet.FullScript)
</head>

<body>

    <!-- Wrapper-->
    <div id="wrapper" class="@Html.PageClass()">

        <!-- Navigation -->
        <partial name="_Navigation" />

        <!-- Page wrapper -->
        <div id="page-wrapper" class="gray-bg @ViewBag.SpecialClass">

            <!-- Top Navbar -->
            <partial name="_TopNavbar" />

            <div class="animated fadeInRight" style="padding-top: 10px">
                <alerts></alerts>
            </div>

            <!-- Main view  -->
            @RenderBody()

            <!-- Footer -->
            <partial name="_Footer" />

        </div>
        <!-- End page wrapper-->

    </div>
    <!-- End wrapper-->

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
        <script src="~/lib/pace/pace.js"></script>
        <script src="~/lib/slimScroll/jquery.slimscroll.js"></script>
        <script src="~/lib/toastr/toastr.min.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/lib/pace/pace.min.js"></script>
        <script src="~/lib/slimScroll/jquery.slimscroll.min.js"></script>
        <script src="~/lib/toastr/toastr.min.js"></script>
    </environment>
    <script src="~/lib/metisMenu/dist/jquery.metisMenu.js"></script>
    <script src="~/lib/datatables/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables-responsive/dataTables.responsive.min.js"></script>
    <script src="~/lib/moment/moment.min.js"></script>
    <script src="~/js/inspinia.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/enhanced-ui.js" asp-append-version="true"></script>

    @await RenderSectionAsync("scripts", false)
</body>

</html>

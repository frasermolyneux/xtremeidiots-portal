@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using XtremeIdiots.Portal.Web.Auth.Constants
@using XtremeIdiots.Portal.Web.Constants
@using XtremeIdiots.Portal.Web.Extensions
@using XtremeIdiots.Portal.Repository.Abstractions.Constants.V1
@using XtremeIdiots.Portal.Repository.Abstractions.Extensions.V1
@inject IAuthorizationService AuthorizationService
@inject SignInManager<IdentityUser> SignInManager

<nav class="navbar-default navbar-static-side" role="navigation" aria-label="Main navigation">
    <div class="sidebar-collapse">
        <ul class="nav metismenu" id="side-menu">
            <li class="nav-header">
                @if (SignInManager.IsSignedIn(User))
                {
                    <div class="dropdown profile-element">
                        <img src="@(User.PhotoUrl())" alt="@(User.Identity?.Name ?? "User") Avatar"
                            class="img-fluid rounded-circle shadow-sm"
                            style="max-height: 80px; max-width: 80px; margin: 0 auto 10px; display: block">
                        <a data-toggle="dropdown" class="dropdown-toggle d-flex align-items-center justify-content-center"
                            href="#" aria-expanded="false" aria-label="User menu for @(User.Identity?.Name)">
                            <span class="block m-t-xs font-bold text-center">
                                <i class="fa fa-user-circle fa-fw" aria-hidden="true"></i> @(User.Identity?.Name) <b
                                    class="caret"></b>
                            </span>
                        </a>
                        <ul class="dropdown-menu animated fadeInDown m-t-xs"
                            style="left: 0; position: absolute; top: 91px; will-change: top, left;">
                            <li>
                                <a asp-controller="Profile" asp-action="Manage" class="dropdown-item"
                                    data-testid="nav-profile-manage">
                                    <i class="fa fa-id-card fa-fw" aria-hidden="true"></i> Manage Profile
                                </a>
                            </li>
                            <li class="dropdown-divider"></li>
                            <li>
                                <form class="form-inline" asp-controller="Identity" asp-action="Logout" method="post">
                                    @Html.AntiForgeryToken()
                                    <button class="dropdown-item" type="submit" aria-label="Sign out of your account"
                                        data-testid="nav-logout-button">
                                        <i class="fa fa-sign-out fa-fw" aria-hidden="true"></i> Logout
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <div class="dropdown profile-element text-center">
                        <div class="placeholder-avatar mb-3">
                            <i class="fa fa-user-circle fa-4x text-muted" aria-hidden="true"></i>
                        </div>
                        <form class="form-inline" asp-controller="Identity" asp-action="LoginWithXtremeIdiots"
                            method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-primary btn-block"
                                aria-label="Sign in with your XtremeIdiots account" data-testid="nav-login-button">
                                <i class="fa fa-sign-in fa-fw" aria-hidden="true"></i> XtremeIdiots Login
                            </button>
                        </form>
                    </div>
                }

                <div class="logo-element">
                    &gt;XI&lt;
                </div>
            </li>

            <li policy="@AuthPolicies.AccessHome" class="@Html.IsSelected("Home", "Index")">
                <a asp-controller="Home" asp-action="Index" data-testid="nav-home">
                    <i class="fa fa-home fa-fw" aria-hidden="true"></i> <span class="nav-label">Home</span>
                </a>
            </li>

            <li policy="@AuthPolicies.AccessServers" class="@Html.IsSelected("Servers", "Index") nav-item">
                <a href="#" class="nav-link" data-testid="nav-servers-toggle" aria-expanded="false">
                    <i class="fa fa-server fa-fw" aria-hidden="true"></i> <span class="nav-label">Servers</span> <span
                        class="fa arrow"></span>
                </a>
                <ul class="nav nav-second-level collapse">
                    <li class="@Html.IsSelected("Servers", "Index")">
                        <a asp-controller="Servers" asp-action="Index" data-testid="nav-servers-gameservers">
                            <i class="fa fa-list fa-fw" aria-hidden="true"></i> Game Servers
                        </a>
                    </li>

                    <li class="@Html.IsSelected("Servers", "Map")">
                        <a asp-controller="Servers" asp-action="Map" data-testid="nav-servers-playermap">
                            <i class="fa fa-map-marker fa-fw" aria-hidden="true"></i> Player Map
                        </a>
                    </li>

                    <li policy="@AuthPolicies.AccessMaps" class="@Html.IsSelected("Maps", "Index")">
                        <a asp-controller="Maps" asp-action="Index" data-testid="nav-servers-maps">
                            <i class="fa fa-map fa-fw" aria-hidden="true"></i> Maps
                        </a>
                    </li>
                </ul>
            </li>

            <li policy="@AuthPolicies.AccessCredentials" class="@Html.IsSelected("Credentials", "Index")">
                <a asp-controller="Credentials" asp-action="Index" data-testid="nav-credentials">
                    <i class="fa fa-key fa-fw" aria-hidden="true"></i> <span class="nav-label">Credentials</span>
                </a>
            </li>

            <li policy="@AuthPolicies.AccessAdminActionsController"
                class="@Html.IsSelected("AdminActions", "Global") nav-item">
                <a href="#" class="nav-link" aria-expanded="false">
                    <i class="fa fa-shield fa-fw"></i> <span class="nav-label">Admin Actions</span><span
                        class="fa arrow"></span>
                </a>
                <ul class="nav nav-second-level collapse">
                    <li class="@Html.IsSelected("AdminActions", "MyActions")">
                        <a asp-controller="AdminActions" asp-action="MyActions"><i class="fa fa-check-square fa-fw"></i>
                            My Actions</a>
                    </li>
                    <li class="@Html.IsSelected("AdminActions", "Global")">
                        <a asp-controller="AdminActions" asp-action="Global"><i class="fa fa-globe fa-fw"></i> Global
                            Action List</a>
                    </li>
                    <li class="@Html.IsSelected("AdminActions", "Unclaimed")">
                        <a asp-controller="AdminActions" asp-action="Unclaimed"><i
                                class="fa fa-exclamation-circle fa-fw"></i> Unclaimed Bans</a>
                    </li>
                </ul>
            </li>

            <li policy="@AuthPolicies.AccessPlayers" class="@Html.IsSelected("Players", "Index") nav-item">
                <a href="#" class="nav-link" data-testid="nav-players-toggle" aria-expanded="false">
                    <i class="fa fa-users fa-fw"></i> <span class="nav-label">Players</span> <span
                        class="fa arrow"></span>
                </a>
                <ul class="nav nav-second-level collapse">
                    <li class="@Html.IsSelected("Players", "Index")">
                        <a asp-controller="Players" asp-action="Index" data-testid="nav-players-index">
                            <i class="fa fa-list fa-fw"></i> Global Player Index
                        </a>
                    </li>

                    @foreach (var game in new[]{ GameType.CallOfDuty2, GameType.CallOfDuty4, GameType.CallOfDuty5,
                                        GameType.Insurgency})
                    {
                        @if ((await AuthorizationService.AuthorizeAsync(User, game, AuthPolicies.ViewPlayers)).Succeeded)
                        {
                            <li class="@Html.IsSelected("Players", "GameIndex", id: game.ToString())">
                                <a asp-controller="Players" asp-action="GameIndex" asp-route-id="@game"><game-type-icon
                                        game="@game"></game-type-icon>
                                    @game.DisplayName()</a>
                            </li>
                        }
                    }

                    <li class="@Html.IsSelected("ProtectedNames", "Index")">
                        <a asp-controller="ProtectedNames" asp-action="Index"><i class="fa fa-shield fa-fw"></i>
                            Protected Names</a>
                    </li>
                    <li class="@Html.IsSelected("PlayerAnalytics", "Analytics")">
                        <a asp-controller="PlayerAnalytics" asp-action="Analytics"><i
                                class="fa fa-area-chart fa-fw"></i>
                            Analytics</a>
                    </li>
                </ul>
            </li>

            <li policy="@AuthPolicies.AccessStatus" class="@Html.IsSelected("Status", "BanFileStatus") nav-item">
                <a href="#" class="nav-link" aria-expanded="false">
                    <i class="fa fa-heartbeat fa-fw"></i> <span class="nav-label">Status</span><span
                        class="fa arrow"></span>
                </a>
                <ul class="nav nav-second-level collapse">
                    <li class="@Html.IsSelected("Status", "BanFileStatus")">
                        <a asp-controller="Status" asp-action="BanFileStatus"><i class="fa fa-ban fa-fw"></i> Ban File
                            Status</a>
                    </li>
                </ul>
            </li>
            <li policy="@AuthPolicies.AccessUsers" class="@Html.IsSelected("User", "Index") nav-item">
                <a href="#" class="nav-link" aria-expanded="false">
                    <i class="fa fa-user fa-fw"></i> <span class="nav-label">Users</span><span class="fa arrow"></span>
                </a>
                <ul class="nav nav-second-level collapse">
                    <li class="@Html.IsSelected("User", "Index")">
                        <a asp-controller="User" asp-action="Index">
                            <i class="fa fa-users fa-fw"></i> <span class="nav-label">Manage Users</span>
                        </a>
                    </li>
                    <li class="@Html.IsSelected("User", "Permissions")">
                        <a asp-controller="User" asp-action="Permissions">
                            <i class="fa fa-lock fa-fw"></i> <span class="nav-label">Permissions</span>
                        </a>
                    </li>
                </ul>
            </li>

            <li policy="@AuthPolicies.AccessChangeLog" class="@Html.IsSelected("ChangeLog", "Index")">
                <a asp-controller="ChangeLog" asp-action="Index">
                    <i class="fa fa-history fa-fw"></i> <span class="nav-label">Change Log</span>
                </a>
            </li>

            <li policy="@AuthPolicies.AccessGameServers" class="@Html.IsSelected("GameServers", "Index")">
                <a asp-controller="GameServers" asp-action="Index">
                    <i class="fa fa-gamepad fa-fw"></i> <span class="nav-label">Game Servers</span>
                </a>
            </li>

            <li policy="@AuthPolicies.AccessBanFileMonitors" class="@Html.IsSelected("BanFileMonitors", "Index")">
                <a asp-controller="BanFileMonitors" asp-action="Index">
                    <i class="fa fa-ban fa-fw"></i> <span class="nav-label">Ban File Monitors</span>
                </a>
            </li>

            <li policy="@AuthPolicies.AccessPlayerTags" class="@Html.IsSelected("Tags", "Index")">
                <a asp-controller="Tags" asp-action="Index">
                    <i class="fa fa-tags"></i> <span class="nav-label">Player Tags</span>
                </a>
            </li>

        </ul>
    </div>
</nav>
@model XtremeIdiots.Portal.RepositoryApi.Abstractions.Models.Tags.TagDto

@{
    ViewData["Title"] = "Delete Tag";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Delete Tag</h5>
                </div>
                <div class="ibox-content">
                    <h3>Are you sure you want to delete this tag?</h3>
                    <div class="alert alert-warning">
                        <p>Deleting this tag will remove it from all players it is currently assigned to.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <dl class="dl-horizontal">
                                <dt>Name:</dt>
                                <dd>@Model.Name</dd>

                                <dt>Description:</dt>
                                <dd>@Model.Description</dd>

                                <dt>Tag Preview:</dt>
                                <dd>@Html.Raw(Model.TagHtml)</dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@Model.TagId" />
                        <div class="form-group">
                            <a asp-action="Index" class="btn btn-white">Back to List</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

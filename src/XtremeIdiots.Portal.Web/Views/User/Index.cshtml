@{
    ViewData["Title"] = "Users";
}

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="alert alert-primary" role="alert">
        <i class="fa fa-info-circle"></i> To understand how the permissions work and what the additional permissions
        mean please see the <a href="@Url.ActionLink("Permissions", "User")">Permissions Overview</a>
    </div>

    <row class="row">
        <div class="col-12">

            <div class="container-fluid">
                <div class="ibox">
                    <div class="ibox-title">
                        @ViewData["Title"]
                    </div>
                    <div class="ibox-content">
                        <table id="dataTable">
                            <thead>
                                <tr>
                                    <td>XtremeIdiots Forum Id</td>
                                    <td>User Profile Id</td>
                                    <td>Username</td>
                                    <td>Email</td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </row>

</div>

@* ReSharper disable once Razor.SectionNotResolved *@

@section Scripts {
    <form id="__af" method="post" style="display:none">@Html.AntiForgeryToken()</form>
    <script type="text/javascript">

        $(document).ready(function () {
            $('#dataTable').DataTable({
                processing: true,
                serverSide: true,
                searchDelay: 1000,
                stateSave: true,
                order: [[1, "asc"]],
                ajax: {
                    url: '/User/GetUsersAjax',
                    dataSrc: 'data',
                    contentType: "application/json",
                    type: "POST",
                    beforeSend: function (xhr) {
                        var tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                        var antiForgeryToken = tokenInput ? tokenInput.value : '';
                        if (antiForgeryToken) {
                            xhr.setRequestHeader('RequestVerificationToken', antiForgeryToken);
                        }
                    },
                    "data": function (d) {
                        return JSON.stringify(d);
                    }
                },
                columns: [
                    {
                        data: 'xtremeIdiotsForumId',
                        name: 'xtremeIdiotsForumId',
                        sortable: true
                    },
                    {
                        data: 'userProfileId',
                        name: 'userProfileId',
                        sortable: true
                    },
                    {
                        data: 'displayName',
                        name: 'displayName',
                        sortable: true
                    },
                    {
                        data: 'email',
                        name: 'email',
                        sortable: true
                    },
                    {
                        sortable: false,
                        render: function (data, type, row) {
                            return logOutUserLink(row['xtremeIdiotsForumId'], '@Html.AntiForgeryToken()');
                        }
                    },
                    {
                        sortable: false,
                        render: function (data, type, row) {
                            return manageClaimsLink(row['userProfileId']);
                        }
                    }
                ]
            });
        });

    </script>
}
@model XtremeIdiots.Portal.AdminWebApp.ViewModels.CreateTagViewModel

@{
    ViewData["Title"] = "Create Tag";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Create New Tag</h5>
                </div>
                <div class="ibox-content">
                    <form asp-action="Create" method="post" class="form-horizontal">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Name" class="col-sm-2 control-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" class="col-sm-2 control-label"></label>
                            <div class="col-sm-10">
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="TagHtml" class="col-sm-2 control-label"></label>
                            <div class="col-sm-10">
                                <textarea asp-for="TagHtml" class="form-control"></textarea>
                                <span asp-validation-for="TagHtml" class="text-danger"></span>
                                <span class="help-block m-b-none">HTML that will be displayed as the tag (e.g., &lt;span
                                    class="label label-primary"&gt;VIP&lt;/span&gt;)</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="UserDefined" class="col-sm-2 control-label"></label>
                            <div class="col-sm-10">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="UserDefined" /> Users can assign this tag to players
                                    </label>
                                </div>
                                <span class="help-block m-b-none">If checked, users can add and remove this tag from
                                    players on the player details page.</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-10 col-sm-offset-2">
                                <a asp-action="Index" class="btn btn-white">Back to List</a>
                                <button type="submit" class="btn btn-primary">Create</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
